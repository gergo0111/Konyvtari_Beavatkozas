<Window x:Class="Konyvtari_Beavatkozas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Olvasó regisztráció" Height="350" Width="500"
        Loaded="Ablak_Betoltve">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="3*" />
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
			<TextBlock Text="Név:" Margin="0,0,0,4"/>
			<TextBox x:Name="txtNev" />

			<TextBlock Text="Életkor:" Margin="0,8,0,4"/>
			<TextBox x:Name="txtEletkor" />

			<TextBlock Text="Műfaj:" Margin="0,8,0,4"/>
			<TextBox x:Name="txtMufaj" />

			<CheckBox x:Name="chkErtesites" Content="Kérek értesítést" Margin="0,8,0,0"/>
			<CheckBox x:Name="chkTagsag" Content="Tagság" Margin="0,4,0,0"/>

			<Button x:Name="btnRegisztral" Content="Regisztrálás" Click="Regisztralas_Gomb_Click" Margin="0,10,0,0" Width="120"/>
			<TextBlock x:Name="txtStatus" Margin="0,8,0,0" Foreground="Green" TextWrapping="Wrap"/>
		</StackPanel>

		<StackPanel Grid.Column="1" VerticalAlignment="Top">
			<TextBlock Text="Regisztrált olvasók:" FontWeight="Bold" />
			<ListBox x:Name="lstOlvasok" Height="220" />
		</StackPanel>
	</Grid>
</Window>